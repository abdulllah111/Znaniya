@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IQueryable<Znaniya.Domain.Entities.Shelf>
@{
    string strTitle = "Полки";
    ViewBag.Title = strTitle;
}

<div>
    <h3>Полки</h3>

    <br />
    @if (User.Identity.IsAuthenticated)
    {
       <div class="div-box">
        <a asp-area="Admin" asp-controller="Shelfs" asp-action="Edit" asp-route-id="">Добавить полку</a>
    </div> 
    }
    
    <br />
    @if (Model.Any())
    {
        <div class="posts">
            @foreach (Znaniya.Domain.Entities.Shelf entity in Model)
            {
                    <article>
			        <h3>@entity.Title</h3>
			        
			        <ul class="actions">
				        <li><a asp-controller="Shelfs" asp-action="Details" asp-route-id="@entity.ShelfID" class="button">Больше</a></li>
			        </ul>
		        </article>
                
               
            }
        </div>
    }
</div>

