@using Znaniya.Service;
<div id="sidebar">
	<div class="inner">

		<!-- Search -->
			<section id="search" class="alt">
				<form method="post" action="#">
					<input type="text" name="query" id="query" placeholder="Поиск" />
				</form>
			</section>

		<!-- Menu -->
			<nav id="menu">
				<header class="major">
					<h2>Меню</h2>
				</header>
				<ul>
					@if (User.Identity.IsAuthenticated){
						<li><a asp-area="Admin" asp-controller="Home" asp-action="">Админ панель</a></li>
					}
					<li><a asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
					<li><a asp-area="" asp-controller="Shelfs" asp-action="Index">Полки</a></li>
					<li><a asp-area="" asp-controller="Books" asp-action="Index">Книги</a></li>
					@if (User.Identity.IsAuthenticated){
						<li><a asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a></li>
					}
					else{
						<li><a asp-area="Admin" asp-controller="Home" asp-action="">Войти</a></li>
					}
				</ul>
			</nav>
		<!-- Section -->
			<section>
				<header class="major">
					<h2>Популярные книги</h2>
				</header>
				<div class="mini-posts">
					<article>
						<a href="#" class="image"><img src="/images/scale_1200.jpg" alt="" /></a>
						<p>ЖКХ</p>
					</article>
					<article>
						<a href="#" class="image"><img src="/images/shool-title.jpg" alt="" /></a>
						<p>Образование</p>
					</article>
					<article>
						<a href="#" class="image"><img src="/images/alga-title.jpg" alt="" /></a>
						<p>Единая транспортная карта «Алга»</p>
					</article>
				</div>
				<ul class="actions">
					<li><a href="#" class="button">Читать</a></li>
				</ul>
			</section>

		<!-- Section -->
			<section>
				<header class="major">
					<h2>@Config.CompanyName</h2>
				</header>
				<ul class="contact">
					<li class="icon solid fa-envelope"><a href="#">@Config.CompanyEmail</a></li>
					<li class="icon solid fa-phone">@Config.CompanyPhone</li>
					<li class="icon solid fa-home">@Config.CompanyStaticAdress<br />
					@Config.CompanyStaticRegion</li>
				</ul>
			</section>

		<!-- Footer -->
			@await Html.PartialAsync("FooterPartical")
	</div>
</div>
